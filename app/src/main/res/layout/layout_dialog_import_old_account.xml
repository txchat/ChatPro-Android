<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="检测到原账号在本设备有备份的好友，是否导入好友至新账号？"
        android:textColor="@color/biz_text_grey_dark"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:button="@drawable/biz_checkbox"
        android:checked="false"
        android:paddingHorizontal="5dp"
        android:text="同时发送添加好友消息"
        android:textColor="@color/biz_text_grey_dark"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_msg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:background="@null"
        android:enabled="false"
        android:gravity="start"
        android:hint="请输入发送消息的内容，限制四十个字以内"
        android:maxLength="40"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:textColor="@color/biz_text_grey_dark"
        android:textColorHint="@color/biz_text_grey_light"
        android:textSize="14sp"
        app:bl_corners_radius="5dp"
        app:bl_solid_color="@color/biz_color_primary_dark" />
</LinearLayout>