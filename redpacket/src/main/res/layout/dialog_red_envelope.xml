<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:background="@mipmap/bg_red_envelopes"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.fzm.widget.RoundRectImageView
            android:id="@+id/iv_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="60dp"
            tools:src="@mipmap/default_avatar_round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#E6C8A5"
                android:textSize="14sp"
                tools:text="德雷克德雷德雷克…" />

            <TextView
                android:id="@+id/coin_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#E6C8A5"
                tools:text="发了一个CHAT2红包" />
        </LinearLayout>

        <TextView
            android:id="@+id/remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:textColor="#E6C8A5"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="恭喜发财，大吉大利！" />

        <ImageView
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:src="@mipmap/icon_open_red_envelopes" />
    </LinearLayout>
</FrameLayout>
