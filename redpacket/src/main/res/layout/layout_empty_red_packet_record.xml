    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:src="@mipmap/empty_red_packet_record" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
