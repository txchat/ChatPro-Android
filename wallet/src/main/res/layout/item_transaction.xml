<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingVertical="10dp"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@color/biz_text_grey_dark"
            android:textSize="18sp"
            tools:text="+5667900.00" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_amount"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/tv_status"
            android:layout_toEndOf="@+id/tv_amount">

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingHorizontal="5dp"
                android:singleLine="true"
                android:textColor="@color/biz_text_grey_light"
                android:textSize="12sp"
                app:bl_corners_radius="3dp"
                app:bl_solid_color="@color/biz_color_primary_dark"
                tools:text="备注/昵称" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/biz_text_grey_light"
            tools:text="完成" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/tv_time"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/biz_text_grey_light"
            tools:text="15hdhuhdhudhhuhuhdhudhhhuhdhudhhudu" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_address"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/biz_text_grey_light"
            android:textSize="13sp"
            tools:text="2021/08/03 11:11" />
    </RelativeLayout>
</LinearLayout>