<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/bg_popup_group_user_mute"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/biz_text_grey_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_count_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/biz_text_grey_dark"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cancel_disable_speak"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_dark_line_rect"
            android:gravity="center"
            android:text="@string/chat_mute_cancel"
            android:textColor="@color/biz_text_grey_dark"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_select_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/chat_select_mute_time"
            android:textColor="@color/biz_text_grey_light"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/tv_time_1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_dark_line_rect"
                android:gravity="center"
                android:text="@string/chat_forever"
                android:textColor="@color/biz_text_grey_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_time_2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_dark_line_rect"
                android:gravity="center"
                android:text="@string/chat_24_hour"
                android:textColor="@color/biz_text_grey_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_time_3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_dark_line_rect"
                android:gravity="center"
                android:text="@string/chat_10_hour"
                android:textColor="@color/biz_text_grey_dark"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/tv_time_4"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_dark_line_rect"
                android:gravity="center"
                android:text="@string/chat_2_hour"
                android:textColor="@color/biz_text_grey_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_time_5"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_dark_line_rect"
                android:gravity="center"
                android:text="@string/chat_30_minute"
                android:textColor="@color/biz_text_grey_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_time_6"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_dark_line_rect"
                android:gravity="center"
                android:text="@string/chat_10_minute"
                android:textColor="@color/biz_text_grey_dark"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="29dp"
            android:background="@color/biz_color_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/biz_cancel"
                android:textColor="@color/biz_color_accent"
                android:textSize="16sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/biz_color_divider" />

            <TextView
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/biz_confirm"
                android:textColor="@color/biz_color_accent"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
