<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="@drawable/img_chat_send"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:paddingLeft="17dp"
        android:paddingTop="8dp"
        android:paddingRight="17dp"
        android:paddingBottom="8dp"
        android:textColor="@color/biz_text_grey_dark"
        android:textSize="16sp"
        tools:text="么什么" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="4"
        android:minHeight="40dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingBottom="10dp"
        android:textColor="@color/biz_text_blue_grey_light"
        android:textSize="14sp"
        tools:text="自己的昵称：这个内容最多显示四 行 昵称：有可能一个人就发了四行 谁谁谁：什么什么什么什么" />

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/biz_color_blue_divider" />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="17dp"
        android:text="@string/chat_forward_msg_summary"
        android:textColor="@color/biz_text_blue_grey_light"
        android:textSize="12sp" />
</LinearLayout>