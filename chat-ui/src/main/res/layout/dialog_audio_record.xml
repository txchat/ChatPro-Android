<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    app:bl_corners_radius="5dp"
    app:bl_solid_color="#B4000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.fzm.chat.widget.IconView
            android:id="@+id/dialog_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/recorder"
            android:text="@string/icon_record_vol1"
            android:textColor="@android:color/white"
            android:textSize="100sp" />

        <com.fzm.chat.widget.IconView
            android:id="@+id/dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/recorder"
            android:text="@string/icon_yuyin_chehui"
            android:textColor="@android:color/white"
            android:textSize="100sp"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/recorder_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="@string/chat_record_slide_to_cancel"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</LinearLayout>