<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:padding="18dp"
        app:srcCompat="@drawable/ic_delete_history" />

    <ImageView
        android:id="@+id/iv_his"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/ic_search_history" />

    <TextView
        android:id="@+id/tv_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/iv_delete"
        android:layout_toEndOf="@+id/iv_his"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/biz_text_grey_dark"
        android:textSize="14sp"
        tools:text="你的素颜如水" />
</RelativeLayout>