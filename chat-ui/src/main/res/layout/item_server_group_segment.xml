<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.fzm.widget.ShadowLayout
        android:id="@+id/sl_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/biz_color_primary_dark"
        app:sl_radius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/biz_text_grey_dark"
                    android:textSize="16sp"
                    tools:drawableEnd="@drawable/ic_server_connect"
                    tools:text="default" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/biz_text_grey_light"
                    android:textSize="14sp"
                    tools:text="172.16.100.92" />
            </LinearLayout>
        </LinearLayout>
    </com.fzm.widget.ShadowLayout>

    <ImageView
        android:id="@+id/select_arrow"
        android:layout_width="19dp"
        android:layout_height="12dp"
        android:layout_marginTop="-0.5dp" />
</LinearLayout>